{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@ousia/core/*": ["packages/core/*"],
      "@ousia/common/*": ["packages/common/src/*"],
      "@ousia/tiptap/*": ["packages/tiptap/src/*"],
    }
  }
}
