{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@ousia/core/*": ["packages/core/*"],
      "@ousia/web/*": ["packages/modules/web/*"],
      "@ousia/editor/*": ["packages/editor/*"]
      //"@ousia/modules/*": ["packages/modules/*"],
    }
  }
}
